{
	"name": "Ontotext S4",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "This extension can be used to annotate text content from the browser with the S4 text analytics services",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"browser_action": {
		"default_icon": "data/s4Logo.png",
		"default_title": "Ontotext S4"
	},
	"permissions": ["contextMenus", "storage", "tabs", "activeTab"],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"web_accessible_resources": [
		"data/*"
	],
    "background": {
		"scripts": ["main.js"]
    }
}